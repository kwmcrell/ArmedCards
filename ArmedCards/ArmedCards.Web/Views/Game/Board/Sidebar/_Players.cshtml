@model ArmedCards.Web.Models.Game.Board.Lobby

<div class="lobbyPlayers">
    <ul class="playerList">
        @foreach (GamePlayer player in Model.Players)
        {
            <li>
                <span class="loggedIn">
                    <span class="playerMenu">
                        <img src="/Images/PlayerMenu.gif" title="Open options for @player.User.DisplayName">
                        <span class="menu">
                            <ul>
                                @*<li><a href="#">Add as friend</a></li>*@
                                <li><a name="kickPlayer" data-userid="@player.User.UserId" href="#">Kick @player.PlayerType</a></li>
                            </ul>
                        </span>
                    </span>

                    <img src="@player.User.PictureUrl">
                    <a id="@player.PlayerType@player.User.UserId" href="/Profile/@player.User.UserId">@player.User.DisplayName</a>
                </span>
                <span class="gamePoints">
                    @player.Points points
                </span>
            </li>
        }
    </ul>
</div>
@if (Model.ShowSpectators)
{
    Int32 spectatorCount = Model.Spectators.Count;
    string spectator = "Spectator";

    if (spectatorCount > 1)
    {
        spectator = spectator + "s";
    }

    <p id="spectatorCount" class="viewSpectators"><a href="#">@spectatorCount @spectator</a></p>

    <div class="hidden" id="hiddenSpectatorList">
        <ol>
            @foreach (GamePlayer player in Model.Spectators)
            {
                <li><a href="/Profile/@player.User.UserId" class="loggedIn" target="_blank"><img src="@player.User.PictureUrl">@player.User.DisplayName</a></li>
            }
        </ol>
    </div>
}

