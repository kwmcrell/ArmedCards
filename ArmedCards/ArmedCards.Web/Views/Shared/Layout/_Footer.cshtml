<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>Armed Cards - @ViewBag.Title</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        
        @Styles.Render("~/bundles/Styles")
        @Scripts.Render("~/bundles/jquery")
    </head>
    <body class="home">
        <div id="overlay" class="overlay">
	    </div>
        <div class="content-wrapper">
            <div class="float-right">
                <section id="login">
                    @Html.Partial("_LoginPartial")
                </section>
            </div>
        </div>
        @RenderBody()
        @Html.Hidden("showLogin", TempData["showLogin"] ?? false)
        <div class="foota">
	        <p class="lefty">
		        © Copyright 2013 Kevin McRell & Paul Miller. 
                <a href="https://github.com/kwmcrell/ArmedCards">Github</a>.
	        </p>
	        <p class="righty">
		        Based on the <a href="http://cardsagainsthumanity.com/">Cards Against Humanity</a> card game.
	        </p>
        </div>
        @Scripts.Render("~/bundles/toastr")
        @Scripts.Render("~/bundles/Core/Login")
        @RenderSection("Scripts", required: false)
    </body>
</html>
