@model ArmedCards.Web.Models.Game.Board.GameOver

<div id="gameOverDiv" class="@(Model.HasWinner ? "" : "hidden")" data-bind="if: HasWinner">
    <div class="gameOver">
        <h3>You're all terrible people, but <a href="#" data-bind="html: Winner.User.DisplayName"></a> takes the cake!</h3>
        <ul class="playerScores" data-bind="foreach: RankedPlayers">
            <li><span class="loggedIn"><a href="#"><img data-bind="attr: { src: User.PictureUrl }, html: User.DisplayName"></a></span><span class="points" data-bind="html: '+' + Points + ' points'"></span></li>
        </ul>
        <div><a data-bind="attr: { href: '/Leave/Index/' + GameID }" class="button nope">Leave Game</a></div>
    </div>
</div>

@Html.Hidden("gameOverJson", Html.Raw(Model.ToJson()))