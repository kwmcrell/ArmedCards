<!DOCTYPE html>
<html lang="en" ng-app="gameApp">
<head>
    <meta charset="utf-8" />
    <title>Armed Cards - @ViewBag.Title</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />
    <meta name="description" content="Join a game of Armed Cards, a version of Cards Against Humanity Online.">
    @Styles.Render("~/bundles/Styles")
    @Scripts.Render("~/bundles/jquery")
    <script src="~/Scripts/angular.min.js"></script>
    @Scripts.Render("~/bundles/Core/AngularHub")
    <script src='/SignalR/hubs'></script>
</head>
<body class="join chatOpen" ng-controller="ListingCtrl">
    <div id="overlay" class="overlay" ng-class="overlay ? 'on' : ''">
    </div>
    <div class="content-wrapper">
        <div class="float-right">
            <section id="login">
                @Html.Partial("_LoginPartial")
            </section>
        </div>
    </div>
    <div id="hubConnectionText" class="hubConnectionText" ng-class="(reconnecting || unableToReconnect) ? 'on' : ''">
        <p id="reconnecting" ng-class="reconnecting ? '' : 'hidden'">Reconnecting...</p>
        <p id="unableToReconnect" ng-class="unableToReconnect ? '' : 'hidden'">Unable to reconnect please refresh your <a id="reloadPage" href="/GameListing">page</a></p>
    </div>
    @RenderBody()
    @Html.Hidden("showLogin", TempData["showLogin"] ?? false)
    @if (User.Identity.IsAuthenticated)
    {
        @Html.Partial("~/Views/Shared/Partials/_Chat.cshtml")
    }
    
    @Scripts.Render("~/bundles/toastr")
    @Scripts.Render("~/bundles/Core/Login")
    @RenderSection("Scripts", required: false)
</body>
</html>

