@model Game

@{
    ArmedCards.Web.Models.Shared.Header header = new ArmedCards.Web.Models.Shared.Header();
	header.SubHeaderText = "Game Over, man!";
	List<GamePlayer> rankedPlayers = Model.Players.OrderByDescending(x => x.Points).ToList();
}

@Html.Partial("~/Views/Shared/Partials/_Header.cshtml", header)

<div class="gameOver">
	<h3>You're all terrible people, but <a href="#">@rankedPlayers.First().User.DisplayName</a> takes the cake!</h3>
	<ul class="playerScores">
		@foreach (GamePlayer player in rankedPlayers)
  {
	  <li><span class="loggedIn"><a href="#"><img src="@player.User.PictureUrl">@player.User.DisplayName</a></span><span class="points">+@player.Points points</span></li>
  }
	</ul>
	<div><a href="/Leave/Index/@Model.GameID" class="button nope">Leave Game</a></div>
</div>