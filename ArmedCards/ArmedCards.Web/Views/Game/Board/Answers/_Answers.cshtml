@model ArmedCards.Web.Models.Game.Board.GameBoard
@{	
	String cssClass = Model.ShowHand() ? "hidden" : "";
	GameRound round = Model.Game.CurrentRound();
	
	List<GameRoundCard> answers =	round.Answers;
	Int32 winnerCount = answers.Count(x => x.Winner);
}

<div id="answers" class="@cssClass">
@if(winnerCount > 0)
{
	@Html.Partial("~/Views/Game/Board/Answers/_WinnerSelected.cshtml", Model.GroupedAnswers())
}
else if (Model.ShowAnswers())
{
	@Html.Partial("~/Views/Game/Board/Answers/_ShowAnswers.cshtml", Model)
}
else
{
    <div class="names played">
		<p>Cards played.</p>
        @for (int i = 0; i < answers.Count(); i++)
        {
		    <div class="answer card outTop">
		    </div>
        }
	</div>
}   
</div>
