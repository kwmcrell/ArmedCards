@model ArmedCards.Web.Models.Game.Listing.Detail

@Html.HiddenFor(x => x.Game.GameID)
<h3>@Model.Game.Title</h3>
<div class="meta">
    @if(Model.Game.IsPrivate)
    {
	    <span title="Private game">Private</span>
    }	
    <span title="Points to win">@Model.Game.PointToWin points to win</span>
</div>
<div class="bar"></div>
<div class="meta">
    <p>Players: @Model.Game.PlayerCount / @Model.Game.MaxNumberOfPlayers</p>
    @foreach (GamePlayer player in Model.Game.Players)
    {
        <span class="playas">@player.User.DisplayName</span>
    }
</div>
<div class="bar"></div>
