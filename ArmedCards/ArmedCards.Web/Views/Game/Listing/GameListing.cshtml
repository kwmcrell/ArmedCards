@model ArmedCards.Web.Models.Game.Listing.Listing
@{
    ViewBag.Title = "Game Listing";
    Layout = "~/Views/Shared/Layout/_Chat.cshtml";

    ArmedCards.Web.Models.Shared.Header header = new ArmedCards.Web.Models.Shared.Header();
    header.SubHeaderText = "Join a game.";
    header.ExtraHtml = new TagBuilder("div");
    header.ExtraHtml.AddCssClass("actions");
    
    TagBuilder anchor = new TagBuilder("a");
    anchor.Attributes.Add("href", "/CreateGame");
    anchor.AddCssClass("button");
    anchor.SetInnerText("Create");

    header.ExtraHtml.InnerHtml = anchor.ToString();
}
<div id="detailModal" class="confirmMessage logIn">	
</div>
@Html.Partial("~/Views/Shared/Partials/_Header.cshtml", header)

<div class="gameListing clearfix">
    @foreach (Game game in Model.Games)
    {
        @Html.Partial("~/Views/Game/Listing/Game.cshtml", game)
    }
</div>

@Html.HiddenFor(x => x.GameToShow)

@section Scripts
{
    @Scripts.Render("~/bundles/Game/Listing")
}