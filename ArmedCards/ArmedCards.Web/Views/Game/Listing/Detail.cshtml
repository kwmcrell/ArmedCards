@if(Model.Game.IsPrivate && !string.IsNullOrEmpty(Model.Game.Passphrase))
{
    <div class="passphrase">
	    <div class="fakeInput">
		    <input id="userSuppliedPassphrase" type="text" placeholder="Passphrase">
	    </div>
    </div>
    <div id="wrong" class="wrong">
	    Wrong!
    </div>
}
@if(Model.Game.PlayerCount < Model.Game.MaxNumberOfPlayers)
{
	<a id="detailDoIt" href="#" class="button">Do it!</a>
}
<a id="detailNope" href="#" class="button nope">Nope</a>
