@model ArmedCards.Entities.Card

<div class="question card">
	@Html.Raw(ArmedCards.Library.Helpers.CardFormatter.ReplaceBlankWithHtml(Model.Content))
	@Html.Raw(ArmedCards.Library.Helpers.CardFormatter.GetBrandingHtml())
    @if(Model.Instructions == ArmedCards.Entities.Enums.Card.Instructions.Pick2)
    {
        <div class="pickTwo">Pick 2</div>
    }
	else if (Model.Instructions == ArmedCards.Entities.Enums.Card.Instructions.Draw2Pick3)
    {
        <div class="pickTwo">Pick 3</div>
    }
</div>
